  <!-- Profile -->
  <section>
    <form action="/login" method="post">
        <div class="profile">
            <div class="container col-md-8">
                <div class="row">
                    <div class="col-lg-4">
                        <div style="height: 70px"></div>
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent text-center">
                                <img class="profile_img" src="/img/people/user.png">
                                <% for(var i=0; i < posts.length; i++) { %>
                                <h5 style="font-family: 'Poppins';"><%= posts[i].Username%></h5>
                                <h6 style="font-family: 'Poppins';">Welcome to your Profile.</h6>
                            </div>
                            <div class="card-body">
                                <center><a href="/change-password"><button type="button" class="btn1">Change Password</button></a></center>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <div style="height: 70px"></div>
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent border-0">
                                <h3 class="mb-0" style="margin-top: 10px;"><i class="fa fa-user"></i> Personal Information</h3><br>
                            </div>
                            <div class="card-body pt-2">
                                <table class="table table-bordered" style="margin-top: -15px;">
                                    <tr>
                                        <th width="20%">User ID</th>
                                        <td width="50%"><%= posts[i].ID%></td>
                                    </tr>
                                    <tr>
                                        <th width="20%">Email Address</th>
                                        <td width="50%"><%= posts[i].Email%></td>
                                    </tr>
                                    <tr>
                                        <th width="20%">Phone Number</th>
                                        <td width="50%"><%= posts[i].PhoneNumber%></td>
                                    </tr>
                                    <tr>
                                        <th width="20%">Birthday</th>
                                        <td width="50%"><%= posts[i].BirthDate%></td>
                                    </tr>
                                    <tr>
                                        <th width="20%">Date & Time</th>
                                        <td width="50%"><%= posts[i].Timestamp%></td>
                                    </tr>
                                </table>
                            </div>
                            <hr style="margin-top: 0px; margin-bottom: 0px;">
                            <div class="card-body">
                                <div class="button-container">
                                  <a class="btn2 btn-danger" href='delete/<%= posts[i].ID %>' </a>DELETE </a>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

