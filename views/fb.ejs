<body>

    <div class="container rounded mt-5 bg-white p-md-5">
        <div class="h2 font-weight-bold">Feedback Tak</div>
        <div class="table-responsive table-wrapper-scroll-y my-custom-scrollbar">

            <!-- Feedback Tak -->
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Feedback</th>                    
                        <th scope="col">Emotion</th>                    
                        <th scope="col">Time</th>                                       
                    </tr>
                </thead>
                <tbody>
                    <% feedbackDataT.forEach((data) => { %>
                        <tr>
                          <td class="bg-blue"><%= data.message %></td>
                          <td class="<%= data.emotion === 'sad' ? 'text-danger' : (data.emotion === 'happy' ? 'text-success' : (data.emotion === 'neutral' ? 'text-warning' : '')) %>">
                            <%= data.emotion %>
                          </td>
                          <td class="bg-blue"><%= data.time %></td>
                        </tr>
                        <tr id="spacing-row">
                            <td></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
